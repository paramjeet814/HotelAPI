@model IEnumerable<Hotel.Models.Room>

@{
    ViewData["Title"] = "viewRoom";
}

<h1>List of Room</h1>
<div class="container">
    <div class="row">

        @foreach (var item in Model)
        {
        <div class="col-md-3">
            <h1>@Html.DisplayFor(modelItem => item.roomType) </h1>
            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQFtD66k9OsfKFeDsXw9m8GElx8TBtM7H_Kj_tcE9Z4bTnB8L542RwKXhvqECuokvf85C4&usqp=CAU" class="img-thumbnail"/>
            <p>@Html.DisplayFor(modelItem => item.Description)</p>
            <h2 class="btn btn-primary">@Html.DisplayFor(modelItem => item.Fair)</h2>
        </div>
        }


        </div>

</div>
